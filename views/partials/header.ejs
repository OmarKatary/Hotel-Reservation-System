<html>

<head>
    <title>Hotel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/registration.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/checkMark.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/userProfile.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/hotelsPage.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
            <a class="navbar-brand" href="/home"><img style="max-width:40px;" src="/images/hotel_icon.png" alt=""></a>
            <ul class="navbar-nav mr-auto">
                <li class='nav-item'><a class="nav-link" href="/hotels">Book Your Hotel <i class="fas fa-plane"></i></a></li>
            </ul>
            <ul class="navbar-nav">
                <li class='nav-item'><a class="nav-link" href="/user"><i class="fa fa-user-alt"></i> <%=user.name%></a></li>
                <li class='nav-item'><a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
        <% if ( message&&message.length > 0 ) { %>
            <div class="form-control-feedback alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong>Message</strong> <%= message %>
            </div>
            <% } %>
    </div>